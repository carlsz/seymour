<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Seymour.DayNight" parent="Theme.MaterialComponents.Light">

        <!-- Core styles -->
        <eat-comment />

        <item name="colorPrimary">@color/seymour__palette_brown_050</item>
        <item name="colorPrimaryVariant">@color/seymour__palette_brown_100</item>
        <item name="colorSecondary">@color/seymour__palette_brown_800</item>
        <item name="colorSecondaryVariant">@color/seymour__palette_brown_900</item>
        <item name="colorAccent">@color/seymour__palette_brown_800</item>
        <item name="colorControlNormal">@color/seymour__palette_brown_800</item>
        <item name="colorError">@color/seymour__palette_red_900</item>
        <item name="colorSurface">@color/background_color_light</item>
        <item name="colorOnSurface">@color/seymour__palette_brown_500</item>
        <item name="dividerVertical">@color/divider_color_light</item>
        <item name="dividerHorizontal">@color/divider_color_light</item>
        <item name="android:colorBackground">@color/background_color_light</item>
        <item name="android:listDivider">@color/divider_color_light</item>
        <item name="android:windowBackground">@color/background_color_light</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/background_color_light
        </item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/background_color_light
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>

        <!-- Typography -->
        <eat-comment />

        <item name="textAppearanceHeadline1">@style/TextAppearance.Seymour.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Seymour.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Seymour.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Seymour.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Seymour.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Seymour.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Seymour.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Seymour.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Seymour.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Seymour.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Seymour.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Seymour.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Seymour.Overline</item>

        <!-- Widget styles -->
        <eat-comment />

        <item name="bottomNavigationStyle">@style/Widget.Seymour.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.Seymour.TabLayout</item>
        <item name="toolbarStyle">@style/Widget.Seymour.Toolbar</item>

    </style>

    <style name="Theme.Seymour.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
